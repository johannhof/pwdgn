{

  "manifest_version": 2,
  "name": "Password Generator",
  "version": "1.0",

  "description": "Generates a password for you",

  "applications": {
    "gecko": {
      "id": "pwdgen@johann-hofmann.com",
      "strict_min_version": "48.0"
    }
  },

  "icons": {
      "48": "icon.png"
  },

  "permissions": [
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_title": "Generate Password",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  }

}
